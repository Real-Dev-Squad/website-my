<div class='tasks-container'>
  {{#if @tasksToShow.length}}
    {{#each @tasksToShow as |task|}}
      <div>
        <Task::Holder
          @task={{task}}
          @onTaskChange={{@onTaskChange}}
          @onStausChange={{this.onStatusChange}}
          @onTaskUpdate={{@onTaskUpdate}}
          @userSelectedTask={{@userSelectedTask}}
          @disabled={{@disabled}}
          @dev={{@dev}}
        />
      </div>
    {{/each}}
  {{else}}
    <div class='tasks-container__no-tasks-found'>No tasks found!</div>
  {{/if}}
</div>