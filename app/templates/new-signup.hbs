{{page-title "New Sign Up"}}

{{#if (eq this.currentStep "get-started")}}
  <NewSignUp::GetStarted  
    @handleRouteParamsChange={{this.changeRouteParams}}
    @currentStep={{this.currentStep}}
    @isSubmitClicked={{this.isSubmitClicked}}
  />  
{{else if (eq this.currentStep "thank-you")}}
  <NewSignUp::GetStarted
    @handleRouteParamsChange={{this.changeRouteParams}}
    @currentStep={{this.currentStep}}
    @isSubmitClicked={{this.isSubmitClicked}}
  />
{{else}}
  <NewSignUp::Form
    @handleRouteParamsChange={{this.changeRouteParams}}
    @register={{this.signup}}
    @userDetails={{this.userDetails}}
    @onChange={{this.handleInputChange}}
    @currentStep={{this.currentStep}}
    @isSubmitClicked={{this.isSubmitClicked}}
    @isButtonDisabled={{this.isButtonDisabled}}
  />
{{/if}}
